<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp" >

            <com.bobo.iweeker.UI.RoundImageView
                android:id="@+id/img_wb_comment_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/profile_avatar_bg"
                android:padding="4dp"
                android:src="@drawable/default_avatar" />
        </RelativeLayout>

        <!-- 右边框架 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >

            <!-- 用户名称、新浪认证部分 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal" >

                <!-- 用户名称 -->

                <TextView
                    android:id="@+id/txt_wb_comment_uname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <!-- 新浪认证 -->

                <ImageView
                    android:id="@+id/img_wb_comment_V"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/avatar_vip"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_wb_comment_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/avatar_grassroot"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right" >

                    <!-- 发布时间 -->

                    <TextView
                        android:id="@+id/txt_wb_comment_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/red"
                        android:textSize="11sp" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 微博正文内容 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="vertical" >

                <!-- 评论内容 -->

                <TextView
                    android:id="@+id/txt_wb_comment_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="1dp"
                    android:textColor="#454545"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.6dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="#DBDBDB" />

</LinearLayout>